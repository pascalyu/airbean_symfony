{% extends 'base.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}
    <h1>Property index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>SurfaceArea</th>
                <th>RoomNbr</th>
                <th>BedSmallNbr</th>
                <th>BedBigNbr</th>
                <th>PricePerDay</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.id }}</td>
                <td>{{ property.description }}</td>
                <td>{{ property.surfaceArea }}</td>
                <td>{{ property.roomNbr }}</td>
                <td>{{ property.bedSmallNbr }}</td>
                <td>{{ property.bedBigNbr }}</td>
                <td>{{ property.pricePerDay }}</td>
                <td>{{ property.picture }}</td>
                <td>
                    <a href="{{ path('property_show', {'id': property.id}) }}">show</a>
                    <a href="{{ path('property_edit', {'id': property.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('property_new') }}">Create new</a>
{% endblock %}
