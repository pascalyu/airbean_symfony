{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ property.description }}</td>
            </tr>
            <tr>
                <th>SurfaceArea</th>
                <td>{{ property.surfaceArea }}</td>
            </tr>
            <tr>
                <th>RoomNbr</th>
                <td>{{ property.roomNbr }}</td>
            </tr>
            <tr>
                <th>BedSmallNbr</th>
                <td>{{ property.bedSmallNbr }}</td>
            </tr>
            <tr>
                <th>BedBigNbr</th>
                <td>{{ property.bedBigNbr }}</td>
            </tr>
            <tr>
                <th>PricePerDay</th>
                <td>{{ property.pricePerDay }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ property.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('property_index') }}">back to list</a>

    <a href="{{ path('property_edit', {'id': property.id}) }}">edit</a>

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}
