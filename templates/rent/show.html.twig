{% extends 'base.html.twig' %}

{% block title %}Rent{% endblock %}

{% block body %}
    <h1>Rent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rent.id }}</td>
            </tr>
            <tr>
                <th>StartDateAt</th>
                <td>{{ rent.startDateAt ? rent.startDateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDateAt</th>
                <td>{{ rent.endDateAt ? rent.endDateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ rent.price }}</td>
            </tr>
            <tr>
                <th>Paid</th>
                <td>{{ rent.paid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PersonNbr</th>
                <td>{{ rent.personNbr }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rent_index') }}">back to list</a>

    <a href="{{ path('rent_edit', {'id': rent.id}) }}">edit</a>

    {{ include('rent/_delete_form.html.twig') }}
{% endblock %}
